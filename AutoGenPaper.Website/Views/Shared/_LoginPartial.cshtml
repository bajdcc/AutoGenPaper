<ul class="nav navbar-nav pull-right">
    @if (Request.IsAuthenticated)
    {
        <li>
            @Html.AGPActionLink("你好，" + User.Identity.Name, "Profile", "Account", false)
        </li>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()">注销</a>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", style = "display:none" }))
            {
                @Html.AntiForgeryToken()
            }
        </li>
    }
    else
    {
        <li>
            @Html.AGPActionLink("登录", "Login", "Account", false)
        </li>
        <li>
            @Html.AGPActionLink("注册", "Register", "Account", false)
        </li>
    }
</ul>


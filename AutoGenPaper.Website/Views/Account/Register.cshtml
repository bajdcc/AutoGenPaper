@model AutoGenPaper.Common.RegisterModel
@using AutoGenPaper.Mvc
@using BootstrapSupport

@{
    ViewBag.Title = "注册";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>新建帐户。</h2>
</hgroup>

@using (Html.BeginForm(null, null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("_alerts")
    @Html.Partial("_validationSummary")

    @Html.BeginControlGroupFor(model => model.UserRole)
    @Html.LabelFor(m => m.UserRole, new { @class = "control-label" })
    <div class="controls">
        @Html.DropDownListFor(m => m.UserRole, ViewData["RoleType"] as IEnumerable<SelectListItem>, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserRole, null, new { @class = "help-inline" })
    </div>
    @Html.EndControlGroup()
    
    @Html.BeginControlGroupFor(model => model.UserName)
    @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
    <div class="controls">
        @Html.TextBoxFor(m => m.UserName, new { @class = "input-xlarge" })
        @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-inline" })
    </div>
    @Html.EndControlGroup()

    @Html.BeginControlGroupFor(model => model.RealName)
    @Html.LabelFor(m => m.RealName, new { @class = "control-label" })
    <div class="controls">
        @Html.TextBoxFor(m => m.RealName, new { @class = "input-xlarge" })
        @Html.ValidationMessageFor(m => m.RealName, null, new { @class = "help-inline" })
    </div>
    @Html.EndControlGroup()

    @Html.BeginControlGroupFor(model => model.Password)
    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
    <div class="controls">
        @Html.PasswordFor(m => m.Password, new { @class = "input-xlarge" })
        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-inline" })
    </div>
    @Html.EndControlGroup()

    @Html.BeginControlGroupFor(model => model.Password)
    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
    <div class="controls">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-xlarge" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "help-inline" })
    </div>
    @Html.EndControlGroup()

    @Html.BeginControlGroup()
    <div class="controls">
        @Html.AGP_SubmitButton("注册")
    </div>
    @Html.EndControlGroup()
}
